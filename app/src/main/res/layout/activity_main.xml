<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <ImageView
        android:id="@+id/board"
        android:layout_width="300dp"
        android:layout_height="300dp"
        android:layout_centerInParent="true"
        app:srcCompat="@drawable/board" />

    <GridLayout
        android:id="@+id/mygrid"
        android:layout_width="300dp"
        android:layout_height="300dp"
        android:layout_centerInParent="true"
        android:columnCount="3"
        android:rowCount="3">

        <ImageView
            android:id="@+id/counter9"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_column="2"
            android:layout_row="2"
            android:onClick="givecounter"
            android:padding="10dp"
            android:tag="8" />

        <ImageView
            android:id="@+id/counter8"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_column="1"
            android:layout_row="2"
            android:onClick="givecounter"
            android:padding="10dp"
            android:tag="7" />

        <ImageView
            android:id="@+id/counter7"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_column="0"
            android:layout_row="2"
            android:onClick="givecounter"
            android:padding="10dp"
            android:tag="6" />

        <ImageView
            android:id="@+id/counter6"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_column="2"
            android:layout_row="1"
            android:onClick="givecounter"
            android:padding="10dp"
            android:tag="5" />

        <ImageView
            android:id="@+id/counter5"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_column="1"
            android:layout_row="1"
            android:onClick="givecounter"
            android:padding="10dp"
            android:tag="4" />

        <ImageView
            android:id="@+id/counter4"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_column="0"
            android:layout_row="1"
            android:onClick="givecounter"
            android:padding="10dp"
            android:tag="3" />

        <ImageView
            android:id="@+id/counter1"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_column="0"
            android:layout_row="0"
            android:onClick="givecounter"
            android:padding="10dp"
            android:tag="0" />

        <ImageView
            android:id="@+id/counter2"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_column="1"
            android:layout_row="0"
            android:onClick="givecounter"
            android:padding="10dp"
            android:tag="1" />

        <ImageView
            android:id="@+id/counter3"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_column="2"
            android:layout_row="0"
            android:onClick="givecounter"
            android:padding="10dp"
            android:tag="2" />

    </GridLayout>

    <Button
        android:id="@+id/mybutton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="31dp"
        android:onClick="playagain"
        android:text="Play Again" />
</RelativeLayout>